        <Button
            android:id="@+id/button_add_With"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/submit"
            android:onClick="depositSubmit"
            android:text="@string/adding_lbl"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_common"
            android:padding="1dp"
            android:layout_marginTop="15dp">

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/table1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                >

                <TableRow>
                    <TextView
                        android:text="Godown No."
                        android:gravity="right"
                        android:paddingLeft="0dip" />
                    <TextView
                        android:text="Stack No."
                        android:gravity="right"
                        android:paddingLeft="0dip" />
                    <TextView
                        android:text="Lot No."
                        android:gravity="right"
                        android:paddingLeft="0dip" />
                    <TextView
                        android:text="No. Of Bags"
                        android:gravity="right"
                        android:paddingLeft="0dip" />
                    <TextView
                        android:text="Qty"
                        android:gravity="right"
                        android:paddingLeft="0dip" />
                    <TextView
                        android:text="Client Name "
                        android:gravity="right"
                        android:paddingLeft="0dip" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/LinearLayout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:stretchColumns="0,1"
                    android:id="@+id/maintable" >
                </TableLayout>
            </ScrollView>
        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/border_common"
           android:layout_marginTop="10dp"
           android:padding="1dp">

           <TableLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/table2"
               android:layout_marginTop="5dp"
               >


               <TableRow>
                   <TextView
                       android:text="Remaining Bags: "
                       android:gravity="right"
                       android:paddingLeft="0dip"
                       />


                   <EditText
                       android:id="@+id/edtRBags"
                       android:visibility="invisible"
                       android:layout_column="38" />

                   <EditText
                       android:visibility="invisible"
                       android:layout_column="50" />

                   <TextView
                       android:text="Remaining Qty: "
                       android:gravity="left"
                       android:paddingLeft="0dip"
                       android:layout_column="59" />
                   <EditText
                       android:id="@+id/edtRqty"
                       android:visibility="invisible"
                       android:layout_column="60" />


               </TableRow>


           </TableLayout>



       </LinearLayout>


        <Button
            android:id="@+id/button_submit_Add_With"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llfinalAdd"
            android:background="@drawable/submit"
            android:onClick="submitFinalDeposit"
            android:text="@string/submit_lbl"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>



</ScrollView>

