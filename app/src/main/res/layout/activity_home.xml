                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txtCdflbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding = "5dp"
                            android:text="@string/button_deposit"
                            android:visibility="visible"
                            android:textSize="10dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_alignBottom="@+id/button_cdf"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btnWirthdrawal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    >

                    <RelativeLayout
                        android:id="@+id/btnWirhtdral2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button_wirthdral"
                            android:background="@drawable/submit"
                            android:src="@mipmap/cdf"
                            android:paddingBottom="20dp"
                            android:text="@string/button_wirthdrawal"
                            android:visibility="visible"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:onClick="withdrawalClick"
                            android:enabled="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:layout_alignRight="@+id/button_wirthdral"
                            android:id="@+id/txWithdrawal"
                            android:background="@drawable/take_pic"
                            android:text=""
                            android:textColor="#ffffff"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/button_wirthdrawal"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:padding="5dp"
                            android:visibility="visible"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />


                    </RelativeLayout>

                </LinearLayout>


