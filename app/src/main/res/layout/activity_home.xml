                    android:paddingTop="8dp">

                    <RelativeLayout
                        android:id="@+id/rlbtn4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/button_warehouse_inspection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="20dp"
                            android:background="@drawable/submit"
                            android:onClick="warehouseInspection"
                            android:text="@string/button_wareouse_inspection"
                            android:visibility="visible"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:src="@mipmap/warehouseinspection"/>

                        <TextView
                            android:id="@+id/txtWarehouseInspectionCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding = "5dp"
                            android:layout_margin="5dp"
                            android:layout_alignRight="@+id/button_warehouse_inspection"
                            android:background="@drawable/take_pic"
                            android:text = ""
                            android:textColor="@android:color/white" />


                        <TextView
                            android:id="@+id/txtWarehouseInspectionlbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding = "5dp"
                            android:text="@string/button_wareouse_inspection"
                            android:visibility="visible"
                            android:textSize="10dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_alignBottom="@+id/button_warehouse_inspection"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/llModule3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/llbtn5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
