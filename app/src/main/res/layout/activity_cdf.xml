<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/loging_outer"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:scrollbars="none"
tools:context="com.coder.sample.CDFActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/id_lbl"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/textColorB"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/border_common"
        android:padding="1dp">

        <TextView

            android:id="@+id/textview_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="2dp"
            android:text="@string/id_lbl"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/textColorLight" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_lbl"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/textColorB"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/border_common"
        android:padding="1dp">

        <TextView

            android:id="@+id/textview_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="@string/date_lbl"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/textColorLight" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/cdf_no_lbl"
        android:textColor="@color/textColorB"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_common"
        android:padding="1dp">

        <EditText

            android:id="@+id/edit_text_cdf_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:hint="@string/cdf_no_lbl"
            android:inputType="text"
            android:paddingLeft="2dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/textColorB" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/state_lbl"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/textColorB"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/border_common"
        android:padding="1dp">


        <Spinner
            android:id="@+id/spinner_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@android:color/white"
            android:entries="@array/array_location" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            android:src="@mipmap/select_brown" />

        <!--<TextView
            android:id="@+id/textview_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorLight"
            android:paddingLeft="2dp"
            android:text="@string/state_lbl"
            android:textAppearance="@android:style/TextAppearance.Medium" />
-->
    </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/location_lbl"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/textColorB"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_common"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="100">

        <Spinner
            android:id="@+id/spinner_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@android:color/white"
            android:entries="@array/array_location" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            android:src="@mipmap/select_brown" />

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/godown_lbl"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/textColorB"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_common"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="100">

        <Spinner
            android:id="@+id/spinner_godown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@android:color/white"
            android:entries="@array/array_location" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            android:src="@mipmap/select_brown" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/godown_addres_lbl"
        android:textColor="@color/textColorB"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_common"
        android:padding="1dp">

        <EditText

            android:id="@+id/edit_text_godown_address"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/white"
            android:hint="@string/godown_addres_lbl"
            android:inputType="text"
            android:paddingLeft="2dp"
            android:gravity="top|left"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/textColorB" />

    </LinearLayout>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/bank_lbl"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/textColorB"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_common"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="100">

        <Spinner
            android:id="@+id/spinner_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@android:color/white"
            android:entries="@array/array_godown" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            android:src="@mipmap/select_brown" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/branch_lbl"
        android:layout_marginTop="15dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/textColorB"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_common"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="100">

        <Spinner
            android:id="@+id/spinner_branch_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@android:color/white"
            android:entries="@array/array_godown" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            android:src="@mipmap/select_brown" />

    </LinearLayout>








    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/comodity_lbl"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/textColorB"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_common"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="100">

        <Spinner
            android:id="@+id/spinner_comodity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@android:color/white"
            android:entries="@array/array_godown" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            android:src="@mipmap/select_brown" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/variety_lbl"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/textColorB"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_common"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="100">

        <Spinner
            android:id="@+id/spinner_variety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@android:color/white"
            android:entries="@array/array_godown" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            android:src="@mipmap/select_brown" />

    </LinearLayout>







    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/deposit_lbl"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/textColorB"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_common"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="100">

        <Spinner
            android:id="@+id/spinner_depositer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="@android:color/white"
            android:entries="@array/array_godown" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            android:src="@mipmap/select_brown" />

    </LinearLayout>









    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/submit"
        android:onClick="cdf"
        android:text="@string/next_lbl"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>


</ScrollView>

