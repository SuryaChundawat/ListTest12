        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/form_no_lbl"
            android:textColor="@color/textColorB"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/border_common"
            android:padding="1dp">

            <EditText

                android:id="@+id/edit_text_form_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/textColorB"
                android:hint="@string/form_no_lbl"
                android:inputType="text"
                android:maxLength="20"
                android:paddingLeft="2dp"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>

        <Button
            android:id="@+id/button_take_a_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/take_pic"
            android:textColor="@color/textColorB"
            android:onClick="takePicGodown"
            android:text="@string/take_a_photo_lbl"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/image_view_attendance"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_common"
            android:src="@android:drawable/ic_menu_camera"/>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/submit"
            android:onClick="next"
            android:text="@string/next_lbl"
            android:layout_marginTop="16dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>